<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity2"
    tools:ignore="ExtraText"
    tools:visibility="visible">



    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="101dp"
        android:layout_height="96dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="582dp"
        app:srcCompat="@drawable/doct" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"

        android:layout_marginLeft="80dp"
        android:layout_marginBottom="620dp"
        android:fontFamily="georgia"
        android:text="MR.Dr."
        android:textColor="@color/green"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="324dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="88dp"
        android:layout_marginBottom="589dp"
        android:fontFamily="georgia"
        android:text="Your instant Health-assistant Chat-bot"
        android:textStyle="bold" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-2dp"
        android:layout_marginBottom="548dp"
        android:background="@color/green"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/topnavbar">


    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <EditText
        android:id="@+id/username"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="384dp"
        android:background="?attr/colorButtonNormal"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:hint="Username or Email"
        android:textColorHint="#131212"
        android:textIsSelectable="true"
        android:textSize="24sp"
        android:typeface="serif" />

    <EditText
        android:id="@+id/password"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="310dp"
        android:background="?attr/colorButtonNormal"
        android:ems="10"
        android:inputType="textPassword"
        android:padding="10dp"
        android:hint="Password"
        android:textAllCaps="false"
        android:textColorHint="#131212"
        android:textIsSelectable="true"
        android:textSize="24sp"
        android:typeface="serif" />

    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="244dp"
        android:background="?attr/colorButtonNormal"

        android:ems="10"
        android:inputType="textPassword"
        android:padding="10dp"
        android:hint="Confirm Password"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:textAllCaps="false"
        android:textColorHint="#131212"
        android:textIsSelectable="true"
        android:textSize="24sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="156dp"
        android:layout_marginRight="156dp"
        android:layout_marginBottom="473dp"
        android:text="Sign-Up"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/signupbutton"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="157dp"
        android:text="Sign-Up"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/loginhere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="86dp"
        android:layout_marginRight="86dp"
        android:layout_marginBottom="119dp"
        android:text="Already Registered? Login Here"
        android:textColor="@color/black"
        android:textSize="18sp" />
    <ImageView
        android:id="@+id/progressbar"
        android:layout_width="106dp"
        android:layout_height="79dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="31dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/progressbar" />

</RelativeLayout>